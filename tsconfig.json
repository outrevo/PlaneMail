{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": ["packages/*/src/**/*.ts"],
  "exclude": ["node_modules", "apps", "**/*.test.*"],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/queue-service" },
    { "path": "./apps/web/tsconfig.build.json" }
  ]
}
